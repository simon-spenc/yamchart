{
  "name": "yamchart",
  "version": "0.1.0",
  "private": true,
  "description": "Git-native business intelligence dashboards",
  "scripts": {
    "build": "turbo build",
    "build:prod": "turbo build --filter=@yamchart/server --filter=@yamchart/web",
    "dev": "turbo dev",
    "start": "node apps/server/dist/index.js",
    "lint": "turbo lint",
    "test": "turbo test",
    "clean": "turbo clean && rm -rf node_modules"
  },
  "devDependencies": {
    "turbo": "^2.3.0",
    "typescript": "^5.7.0"
  },
  "packageManager": "pnpm@9.15.0",
  "engines": {
    "node": ">=20.0.0"
  }
}
